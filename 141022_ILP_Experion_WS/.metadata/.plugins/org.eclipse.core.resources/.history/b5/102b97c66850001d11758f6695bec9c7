public class Service {



   public static Account createsavingsAccount() throws Exception {



       Scanner scanner = new Scanner(System.in);
        System.out.println("Enter Customer Code - ");
        String customerCode = scanner.nextLine();
        System.out.println("Enter Customer Name - ");
        String customerName = scanner.nextLine();
        System.out.println("Savings Max Account created for"+"    "+customerName);
        System.out.println("Account is Active!!");
        
        
        



       Account account = new Account(customerCode, customerName);
        //product.setSerielNo(product.getSerielNo() + 1);
        //roduct.setSerielNoOriginal(product.getSerielNo());
        return account;



}
